{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "rootDir": "src/",
    "outDir": "build/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "removeComments": true,
  },
  "exclude": [
    "node_modules",
    "build"
  ],
  "include": [
    "./**/*.ts"
  ],
}
